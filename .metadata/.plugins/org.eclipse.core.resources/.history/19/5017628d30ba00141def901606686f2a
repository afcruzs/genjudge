package unal.edu.gpj
import org.apache.shiro.SecurityUtils

class ContestController {

	def loginService
	def index() {
		render( view: "index", model : [ contests : Contest.list() ] )
	}

	def seeProblems(){
		def submissions = Submission.findAllByUserId(1)
		render( 
			view: "seeProblems", model : [ 
			user : loginService.getCurrentUser(), 
			contest : Contest.get(Long.parseLong(params.contestId)) 
			] )
	}
}
